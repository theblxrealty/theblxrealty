# Database Configuration
# Replace with your PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/your_database_name"

DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Authentication
# Generate a secure random string for JWT signing
JWT_SECRET="your-super-secret-jwt-key-here"

# Email Configuration (Gmail)
# Your Gmail address for sending notifications
EMAIL_USER="your-email@gmail.com"
# Gmail App Password (not your regular password)
# Enable 2FA and generate App Password in Gmail settings
EMAIL_PASS="your-gmail-app-password"

# Next.js Configuration
# Your application URL
NEXTAUTH_URL="http://localhost:3000"
# Generate a secure random string for NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"

# Optional: Database URL for different environments
# DATABASE_URL_DEV="postgresql://username:password@localhost:5432/dev_database"
# DATABASE_URL_PROD="postgresql://username:password@production-host:5432/prod_database"

# Optional: Email configuration for different environments
